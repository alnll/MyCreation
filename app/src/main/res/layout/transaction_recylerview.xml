<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="180dp"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"

        app:srcCompat="?android:attr/textSelectHandleLeft" />


        <LinearLayout
            android:id = "@+id/Text"
            android:layout_width="247dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="137dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:paddingTop="30dp"
                android:textSize="16dp"
                android:text="Title:Pencil case" />

            <TextView
                android:id="@+id/rvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:paddingTop="15dp"
                android:textSize="16dp"
                android:text="Price: $2" />

            <TextView
                android:id="@+id/rvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:textSize="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Quantity:2" />
        </LinearLayout>

</RelativeLayout>